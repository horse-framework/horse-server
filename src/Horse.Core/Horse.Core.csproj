<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
        <Title>Horse.Core</Title>
        <Product>Horse.Core</Product>
        <Description>Horse Core library for all horse servers, protocols and services</Description>
        <PackageTags>horse,server,core</PackageTags>
        <AssemblyVersion>6.6.0</AssemblyVersion>
        <FileVersion>6.6.0</FileVersion>
        <PackageVersion>6.6.0</PackageVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Mehmet Helvacıköylü;Emre Hızlı</Authors>
        <PackageProjectUrl>https://github.com/horse-framework/horse-server</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/horse-framework/horse-server/blob/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/horse-framework/horse-server</RepositoryUrl>
        <LangVersion>12</LangVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DocumentationFile>bin\Debug\Horse.Core.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>bin\Release\Horse.Core.xml</DocumentationFile>
    </PropertyGroup>

</Project>
